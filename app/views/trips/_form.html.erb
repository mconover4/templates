<div class="row uniform 50%">
  <div class="6u 12u$(xsmall)">
    <%= form_for trip do |f| %>
    <% if trip.errors.any? %>
      <div class="errors">
        <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>
        <ul>
          <% trip.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="12u$">
    <%= hidden_field_tag "user_id", @user_id %>

    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Name this trip", :required => true %>

    <%= f.label :categories, "Select & Create" %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <%= f.fields_for :categories, trip.categories.build do |categories_fields| %>
      <%= categories_fields.text_field :name, placeholder: "categorize it", :required => true %>
    <% end %>
  </div>
  <br>
  <div class="12u$">
    <%= f.text_area :content, placeholder: "Narrate the trip", rows: "10", :required => true %>
  </div>
  <br>
  <div class="12u$">
    <ul class="actions">
      <li><%=f.submit "Submit", class: "special" %></li>
      <li><input type="reset" value="Reset"></li>
    </ul>
  </div>
  <% end %>
