<section id="main" class="wrapper">
	<div class="container">
		<div class="row">
  		<div class="6u 12u$(xsmall)">
				<header class="major special">
    			<p><%= @user.name %> 「<%= @user.role.upcase %>」</p>
				</header>
				<h4>Preferences</h4>
				<ul class="alt">
					<%= render partial: 'user', locals: {user: @user}  %>
				</ul>
					<%= link_to("dashboard", users_path, class: 'button alt') %>
					<% if current_user.id == @user.id && current_user.role == 'planner' || current_user.is_admin? %>
						<%= link_to("Trip.it", new_user_trip_path(current_user), class: 'button alt') %>
					<% end %>
					<br><br>
						<% if current_user.id == @user.id %>
		 					<%= link_to("Edit Profile", edit_user_path(@user)) %>
						<% end %>
			</div>
    	<div class="6u 12u$(xsmall)">
      	<div class="image fit">
        	<img src="https://images.unsplash.com/photo-1491317079341-38313806b657?w=750&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D" alt="">
    		</div>
			</div>
				<div class="6u 12u$(xsmall)">
					<% if @user.role == 'planner' || @user.role == 'admin' %>
					<h3> Trips by <%= @user.name %></h3>
					<% @user.trips.each do |trip| %>
						<h4><strong>-「<%= link_to trip.name.capitalize, user_trip_path(trip) %>」</strong> <em>under:</em>
					  	<% trip.categories.each do |category| %>
								「<%= link_to category.name, trip_category_path(trip, category) if trip.category_ids %>」
					  	<% end %>
						</h4>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
</section>
