<section id="main" class="wrapper">
  <div class="container">
		<header class="major special">
      <h3><%= @user.name%>'s Trips:</h3>
      <% @trips.each do |trip| %>
        <p><%= link_to trip.name,  user_trip_path(@user, trip) %></p>
        <h4>Categories:</h4>
        <ul>
        <% trip.categories.each do |cat| %>
          <li> <%= cat.name %> </li>
          <% end %>
          </ul>
          <h4> Narration: </h4>
          <%= trip.content %>
        <% end %>
    </header>
  </div>
</section>
