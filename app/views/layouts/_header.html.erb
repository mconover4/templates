<!-- Header -->
<header id="header">
  <h1><strong><a href="/">Plan.Me</a></strong></h1>
    <nav id="nav">
      <ul>
        <% if !logged_in? %>
          <li><a href="/">Home</a></li>
        <% else logged_in? %>
          <li><%= link_to "Profile", current_user %></li>
          <% if current_user.role == 'planner' || current_user.role == 'admin'%>
            <li><%= link_to "Plan.it", new_user_trip_path(@current_user.id) %></li>
          <% end %>
          <li><%= link_to "Browse", users_path %></li>
          <li><%= link_to "Trips", trips_path %></li>
          <li><%= link_to "Log out", logout_path, method: "delete", data: { confirm: 'Are you sure you want to log out?' } %></li>
        <% end %>
      </ul>
    </nav>
  </header>
  <br><br>
